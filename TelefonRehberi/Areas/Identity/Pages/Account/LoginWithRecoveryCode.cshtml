@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Kurtarma Kodu Doğrulama";
}
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.92/jodit.min.css">
<script src="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.92/jodit.min.js"></script>
<section class="ab-info-main py-md-5">
    <div class="container py-md-3">
        <h1>Kurtarma Kodu Doğrulama</h1>
        <hr />
        <p>
            Kurtarma kodu ile giriş isteğinde bulundunuz.
            Bu giriş siz kimlik uygulamanızı girişte veya iki faktörlü kimlikte sağlayana kadar hatırlanmayacak.
            Yeniden giriş yapın.
        </p>
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.RecoveryCode">Kurtarma Kodu</label>
                        <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Giriş Yap</button>
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    </script>
}